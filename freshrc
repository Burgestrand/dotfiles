# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

fresh freshshell/fresh bin/fresh --bin

fresh bash --file=~/.bash/
fresh bash_profile --file

fresh ssh/config --file=~/.ssh/config

fresh vimrc --file
fresh junegunn/vim-plug plug.vim --file=~/.vim/autoload/plug.vim
fresh vim/plugins.vim --file=~/.vim/plugins.vim
fresh vim/settings.vim --file=~/.vim/settings.vim
fresh vim/filetypes.vim --file=~/.vim/filetypes.vim
echo "Vim files sourced, don't forget to run: vim +PlugInstall"

fresh gitconfig --file
fresh gitignore --file
