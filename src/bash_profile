# Set locale
export LC_CTYPE=sv_SE.UTF-8

# Git (Bash completion)
[ -f /usr/local/etc/bash_completion.d/git-completion.bash ] && . /usr/local/etc/bash_completion.d/git-completion.bash

# Prompt
# $(__git_ps1)
export PS1='\u@\h:$(basename "$(pwd)")$(__git_ps1)\$ '

# Ignore duplicate bash histories
export HISTCONTROL=ignoreboth

# Modify PATH for Homebrew
export PATH=~/.bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/bin:/sbin:/usr/X11/bin

# Modify NODE_PATH for rpm
export NODE_PATH=/usr/local/lib/node_modules

# MVIM
export EDITOR='vi'

# Hub is le github
alias b='bundle exec'
alias irb='pry'
alias git='hub'
alias lf='ls -laF'
alias gp='git push'
alias gl='git pull'
alias gs='git s'

# Function to change directory to a Project
function p { cd ~/Projects/$1; }
complete -C ~/.bash_completion/project.sh -o default p

# RVM!
[[ -s "/Users/Kim/.rvm/scripts/rvm" ]] && source "/Users/Kim/.rvm/scripts/rvm"
